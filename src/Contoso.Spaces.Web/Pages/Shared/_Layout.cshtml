    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true">
    <title>
        Contoso Spaces
    </title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" asp-page="/index">
            <i class="fa-stack">
                <i class="fa fa-circle-o-notch fa-stack-2x"></i>
                <i class="fa fa-building-o fa-stack-1x"></i>
            </i>
            Contoso Spaces
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navigation">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/index">
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/locations" asp-route-id="">
                        Locations
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/about">
                        About Us
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    @RenderBody()
    <footer class="card bg-secondary">
        <div class="card-body container d-flex justify-content-between">
            <a class="btn btn-secondary" asp-page="/index">
                <i class="fa-stack">
                    <i class="fa fa-circle-o-notch fa-stack-2x"></i>
                    <i class="fa fa-building-o fa-stack-1x"></i>
                </i>
                Contoso Spaces
                &copy; 2019
            </a>
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/locations" asp-route-id="">
                        Locations
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/about">
                        About Us
                    </a>
                </li>
            </ul>
            <a href="https://github.com/seesharprun/cosmos-workshop" target="_blank" class="btn btn-secondary">
                <i class="fa fa-github" aria-hidden="true"></i>
                GitHub
            </a>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" integrity="sha384-xrRywqdh3PHs8keKZN+8zzc5TX0GRTLCcmivcbNJWm2rs5C8PRhcEn3czEjhAO9o" crossorigin="anonymous"></script>
